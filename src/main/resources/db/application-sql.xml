<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <entry key="getApplicationById">
        <![CDATA[
            SELECT * FROM application WHERE id = ?;
        ]]>
    </entry>
    <entry key="deleteApplicationById">
        <![CDATA[
            DELETE FROM application WHERE id = ?;
        ]]>
    </entry>
    <entry key="createApplication">
        <![CDATA[
            INSERT INTO application (id, customer_id, finished, manager_username)
            VALUES (?, ?, ?, ?);
        ]]>
    </entry>
    <entry key="updateApplication">
        <![CDATA[
                UPDATE application
                    SET customer_id = ?,
                    finished = ?,
                    manager_username = ?,
                    WHERE id = ?;
        ]]>
    </entry>
    <entry key="getLegalEntityById">
        <![CDATA[
            SELECT * FROM legal_entity WHERE id = ?;
        ]]>
    </entry>
    <entry key="getLegalEntityByName">
        <![CDATA[
            SELECT * FROM legal_entity WHERE name LIKE ?;
        ]]>
    </entry>
    <entry key="getLegalEntityByInn">
        <![CDATA[
            SELECT * FROM legal_entity WHERE inn = ?;
        ]]>
    </entry>
    <entry key="deleteLegalEntityById">
        <![CDATA[
            DELETE FROM legal_entity WHERE id = ?;
        ]]>
    </entry>
    <entry key="createLegalEntity">
        <![CDATA[
            INSERT INTO legal_entity (name, inn, ogrn, kpp)
            VALUES (?, ?, ?, ?);
        ]]>
    </entry>

    <entry key="createGoodApplication">
        <![CDATA[
            INSERT INTO good_application (good_id, application_id, count)
            VALUES (?, ?, ?);
        ]]>
    </entry>
    <entry key="findGoodApplication">
        <![CDATA[
            SELECT * FROM good_application WHERE application_id = ?;
        ]]>
    </entry>
    <entry key="findAllApplication">
        <![CDATA[
            SELECT * FROM application;
        ]]>
    </entry>
    <entry key="removeGoodApplication">
        <![CDATA[
            DELETE FROM good_application WHERE application_id = ?;
        ]]>
    </entry>

    <entry key="insertGood">
        <![CDATA[
            INSERT INTO good (name, count)
            VALUES (?, ?);
        ]]>
    </entry>
    <entry key="updateGood">
        <![CDATA[
                UPDATE good
                    SET name = ?,
                    count = ?
                    WHERE id = ?;
        ]]>
    </entry>
    <entry key="findGood">
        <![CDATA[
            SELECT * FROM good WHERE id = ?;
        ]]>
    </entry>
    <entry key="removeGood">
        <![CDATA[
            DELETE FROM good WHERE id = ?;
        ]]>
    </entry>
    <entry key="getAllGood">
        <![CDATA[
            SELECT * FROM good;
        ]]>
    </entry>

    <entry key="reserveGood">
        <![CDATA[
            INSERT INTO good_reserve (good_id, count) VALUES (?, ?);
        ]]>
    </entry>
    <entry key="releaseGood">
        <![CDATA[
            DELETE FROM good_reserve WHERE good_id in (%s);
        ]]>
    </entry>

</properties>
